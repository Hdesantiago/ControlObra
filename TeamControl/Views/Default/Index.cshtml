@model Modelos.Usuario

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<div id="Light" style="margin: 0 auto; top: 0; left: 0; background-color: gray; width: 100%; height: 100%; position: fixed; z-index: -1; opacity: 0.8;"></div>

<div class="container">
    <div class="row">
        <br />
        <br />
        <br />

    </div>
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6 ColorFondo1">
            @if (ViewBag.Existe == "S")
            {

                <div class="alert alert-success " id="success-alert" style=" z-index:10000; font-weight:bold; text-align:center; width:100%">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <strong></strong>
                    Favor de revisar, su Usuario no existe o revise su contraseña. !!
                </div>
            }


            @using (Html.BeginForm("Consulta", "Default", FormMethod.Post))
            {
                <table>
                    <tr><td><img src="~/Imagenes/TeamControl.PNG" class="img-responsive" /></td></tr>
                    <tr><td>&nbsp;</td></tr>
                    <tr><td>&nbsp;</td></tr>

                    <tr><td>Empresa</td></tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(x => x.Us_Empresa, new { @class = "form-control", Placeholder = "Empresa", @maxlength = "3", @style = "width:250px" })
                        @Html.ValidationMessageFor(x => x.Us_Empresa, null, new { @class = "label label-danger" })
                    </td>
                </tr>
                <tr><td>Usuario</td></tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(x => x.Us_Usuario, new { @class = "form-control", Placeholder = "Usuario", @maxlength = "15", @style = "width:250px" })
                    @Html.ValidationMessageFor(x => x.Us_Usuario, null, new { @class = "label label-danger" })
                </td>
            </tr>
            <tr><td>Password</td></tr>
            <tr>
                <td>
                    @Html.PasswordFor(x => x.Us_Password, new { @class = "form-control", Placeholder = "Password", @maxlength = "10", @style = "width:250px" })
                @Html.ValidationMessageFor(x => x.Us_Password, null, new { @class = "label label-danger" })
            </td>
        </tr>
        <tr><td>&nbsp;</td></tr>
        <tr><td>&nbsp;</td></tr>
        <tr><td><input type="submit" class="btn btn-primary" value="Accesar" /> </td></tr>

    </table>
            }
        </div>
        <div class="col-md-3">

        </div>
    </div>

</div>

<script>
    $(document).ready(function () {

        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").alert('close');
        });
    });

</script>